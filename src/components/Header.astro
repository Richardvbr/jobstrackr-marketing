---
import LinkButton from './LinkButton.astro';
---

<header>
  <nav>
    <div class='mx-auto px-4 lg:w-7xl'>
      <div class='flex justify-between'>
        <div class='flex items-center space-x-7'>
          <div>
            <a href='#' class='flex items-center py-4'>
              <img
                src='/images/logo_cropped_transparent.svg'
                alt='Logo'
                class='w-[125px] lg:w-[165px]'
              />
            </a>
          </div>
          <!-- Primary Navbar items -->
          <ul class='flex gap-4 lg:gap-6'>
            <li>
              <a
                href='#features'
                class='hidden rounded-md p-2 font-medium text-gray-700 transition hover:bg-gray-100 hover:text-black md:flex'
                >Features</a
              >
            </li>
            <li>
              <a
                href='#faq'
                class='hidden rounded-md p-2 font-medium text-gray-700 transition hover:bg-gray-100 hover:text-black md:flex'
                >FAQ</a
              >
            </li>
          </ul>
        </div>
        <!-- Secondary Navbar items -->
        <div class='hidden items-center space-x-3 md:flex'>
          <LinkButton
            href='https://portal.jobstrackr.app'
            label='Log in'
            type='primary'
            customClasses='ml-auto'
          />
        </div>
        <!-- Mobile menu button -->
        <div class='flex items-center md:hidden'>
          <button class='mobile-menu-button outline-none'>
            <svg
              class='h-7 w-7'
              x-show='!showMenu'
              fill='none'
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              viewBox='0 0 24 24'
              stroke='currentColor'
            >
              <path d='M4 6h16M4 12h16M4 18h16'></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
    <!-- mobile menu -->
    <div class='mobile-menu hidden bg-secondary text-white'>
      <ul>
        <li>
          <a href='#features' class='text-md block px-4 py-4'>Features</a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  const btn = document.querySelector('button.mobile-menu-button');
  const menu = document.querySelector('.mobile-menu');
  const menuItem = document.querySelector('.mobile-menu li a');

  const elems = btn && menu && menuItem;

  if (elems) {
    menuItem?.addEventListener('click', () => {
      menu.classList.add('hidden');
    });

    window.addEventListener('resize', () => {
      const width = window.innerWidth;
      if (width >= 768) {
        menu.classList.add('hidden');
      }
    });

    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>
