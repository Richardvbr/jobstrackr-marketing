---

<header>
  <div class='container'>
    <a href='/'>
      <img
        src='/assets/images/logo_cropped_transparent.svg'
        alt='JobsTrackr logo'
      />
    </a>
    <nav>
      <ul>
        <li class='log-in'>
          <a href='https://portal.jobstrackr.app'>Log in</a>
        </li>
      </ul>
    </nav>
  </div>
</header>
<style lang='scss'>
  @import '../styles/_variables.scss';
  header {
    width: 100%;
    border-bottom: 1px solid $border-light;
  }

  .container {
    margin: auto;
    padding: 15px 10px;
    display: flex;
    align-items: center;
    justify-content: space-between;

    img {
      display: block;
      max-width: 125px;
    }

    ul {
      list-style: none;
      display: flex;
      gap: 10px;

      li a {
        text-decoration: none;
        font-weight: 500;
        border-radius: 5px;
        padding: 8px 12px;
      }

      .log-in a {
        color: black;
        background-color: $primary;
        transition: all 0.2s;
        &:hover {
          background-color: #dfdbd3;
        }
      }
    }
  }

  @media (min-width: 600px) {
    .container {
      max-width: 75rem;
      padding: 15px 20px;

      img {
        max-width: 165px;
      }

      ul {
        gap: 20px;

        li a {
          padding: 9px 15px;
        }
      }
    }
  }
</style>
