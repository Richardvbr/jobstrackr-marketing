---
import LinkButton from './LinkButton.astro'
---

<header>
  <nav>
    <div class="mx-auto px-4 py-6 lg:max-w-7xl">
      <div class="flex justify-between">
        <div class="flex items-center space-x-7">
          <div>
            <a href="/#" class="flex items-center">
              <img src="/images/logo_cropped_transparent.svg" alt="Logo" class="w-[125px] lg:w-[165px]" />
            </a>
          </div>
        </div>
        <div class="hidden items-center gap-3 space-x-3 md:flex">
          <a href="https://portal.jobstrackr.app/sign-in" class="font-medium text-stone-700 lg:hover:text-black">Log in</a>
          <LinkButton href="https://portal.jobstrackr.app/sign-up" label="Get started" type="secondary" />
        </div>
      </div>
    </div>
  </nav>
</header>
