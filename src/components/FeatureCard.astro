---
import { Icon } from 'astro-icon';
export interface Props {
  iconName: string;
  title: string;
  description: string;
}

const { iconName, title, description } = Astro.props;
---

<div class='rounded-lg bg-secondary p-6 shadow-xl'>
  <div class='mb-5 max-w-[30px] text-white'>
    <Icon name={iconName} />
  </div>
  <h1 class='text-md mb-2 font-bold text-white'>
    {title}
  </h1>
  <p class='text-white/70'>
    {description}
  </p>
</div>
